<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.principal.combo.accesibilidad.AccesibilidadFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accesibilidad" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accesibilidad con\nComandos de voz"
        android:textColor="@color/acento"
        android:gravity="center"
        android:textSize="28sp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center" />
    <RadioGroup
        android:id="@+id/grupo_accesibilidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="40dp">

        <RadioButton
            android:id="@+id/radio_activa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Activa"
            android:textSize="18sp"
            android:textColor="@android:color/white" />
        <RadioButton
            android:id="@+id/radio_inactiva"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Inactiva"
            android:textSize="18sp"
            android:textColor="@android:color/white" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_regresar_inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:backgroundTint="@color/secundario"
            android:text="Regresar"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:contentDescription="BotÃ³n para regresar a la pantalla anterior" />
    </LinearLayout>
</LinearLayout>