<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/empresa"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".ui.carga.CargaActivity">

    <ImageView
        android:id="@+id/img_carga"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_marginVertical="180dp"
        android:src="@drawable/img_logo_empresa_redondo_imagen" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Developed by CyberPath"
        android:textSize="30sp" />

</LinearLayout>